<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="?android:attr/selectableItemBackground"
  >

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/white"
    android:orientation="vertical">
    <ImageView
      android:id="@+id/item_food_image"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:layout_centerVertical="true"
      android:paddingBottom="4dp"
      android:paddingLeft="8dp"
      android:paddingTop="4dp"/>
    <View
      android:id="@+id/dummy_view"
      android:layout_width="1dp"
      android:layout_height="0dp"
      android:layout_centerVertical="true"/>
    <TextView
      android:id="@+id/item_food_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/item_food_image"
      android:layout_above="@id/dummy_view"
      android:layout_marginBottom="8dp"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:textSize="16sp"
      android:textStyle="bold"/>
    <TextView
      android:id="@+id/item_food_category"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/dummy_view"
      android:layout_toRightOf="@id/item_food_image"
      android:layout_marginTop="8dp"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:textSize="14sp"
      android:textStyle="italic"/>
  </RelativeLayout>
</LinearLayout>